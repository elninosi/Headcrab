{
	"name": "Headcrab",
	"version": "1.2",
	"manifest_version": 2,
	"author": "Thor Hanks",
	"description": "Various helpers for software devs attached into Jira.",

	"permissions":
	[
		"clipboardWrite",
		"*://*/*"
	],

	"icons":
	{
		"16": "Logo/Logo_16x16.png",
		"48": "Logo/Logo_48x48.png",
		"128": "Logo/Logo_128x128.png"
	},

	"content_scripts":
	[
		{
			"matches": ["*://*/*"],
			"css": ["jira/content.css"],
			"js": ["jira/content.js"]
		}
	]
}
